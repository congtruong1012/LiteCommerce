@model LiteCommerce.DomainModels.Product
@{
    ViewBag.Title = "Product Detail";
}

    <div class="box box-primary">
        <div class="box-body">
            <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                <h4 style="font-weight: 600">Information Product</h4>
                <a href="~/Product" style="margin-right: 10px;" class="pull-right">Back to list</a>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-7">
                        <div class="row">
                            <div class="col-sm-4">
                                <span class="pull-right"><b>Name Product:</b></span>
                            </div>
                            <div class="col-sm-8">
                                <span>@Model.ProductName</span>
                            </div>
                            <div class="col-sm-12" style="border-bottom: 1px solid rgba(0,0,0,0.2); margin: 5px 0;"></div>
                            <div class="col-sm-4">
                                <span class="pull-right"><b>Category:</b></span>
                            </div>
                            <div class="col-sm-8">
                                @foreach (var item in SelectListHelper.Category())
                                {
                                    if (Model.CategoryID.ToString() == item.Value)
                                    {
                                        <span>@item.Text</span>
                                    }
                                }
                            </div>
                            <div class="col-sm-12" style="border-bottom: 1px solid rgba(0,0,0,0.2); margin: 5px 0;"></div>
                            <div class="col-sm-4">
                                <span class="pull-right"><b>Supplier</b></span>
                            </div>
                            <div class="col-sm-8">
                                @foreach (var item in SelectListHelper.Supplier())
                                {
                                    if (Model.SupplierID.ToString() == item.Value)
                                    {
                                        <span>@item.Text</span>
                                    }
                                }
                            </div>
                            <div class="col-sm-12" style="border-bottom: 1px solid rgba(0,0,0,0.2); margin: 5px 0;"></div>
                            <div class="col-sm-4">
                                <span class="pull-right"><b>Quantity Per Unit:</b></span>
                            </div>
                            <div class="col-sm-8">
                                <span>@Model.QuantityPerUnit</span>
                            </div>
                            <div class="col-sm-12" style="border-bottom: 1px solid rgba(0,0,0,0.2); margin: 5px 0;"></div>
                            <div class="col-sm-4">
                                <span class="pull-right"><b>Unit Price:</b></span>
                            </div>
                            <div class="col-sm-8">
                                <span>@Model.UnitPrice</span>
                            </div>
                            <div class="col-sm-12" style="border-bottom: 1px solid rgba(0,0,0,0.2); margin: 5px 0;"></div>
                            <div class="col-sm-4">
                                <span class="pull-right"><b>Description:</b></span>
                            </div>
                            <div class="col-sm-8">
                                <div>@Model.Descriptions</div>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-5">
                        <img src="~/Images/@Model.PhotoPath" style="width: 100%; height: 250px; object-fit: contain;" alt="Alternate Text" />
                    </div>
                </div>
            </div>
            <h4 style="font-weight: 600; margin: 20px 0;">Information Product Attribute</h4>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th>Attribute Name</th>
                        <th>Attribute Value</th>
                        <th>Display Order</th>
                    </tr>
                </thead>
                <tbody>
                    @{ 
                        int num = 1;
                    }
                    @foreach (var item in ViewData["Attribute"] as List<LiteCommerce.DomainModels.ProductAttribute>)
                    {
                        <tr>
                            <td class="text-center">@(num++)</td>
                            <td>@item.AttributeName</td>
                            <td>@item.AttributeValues</td>
                            <td>@item.DisplayOrder</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

