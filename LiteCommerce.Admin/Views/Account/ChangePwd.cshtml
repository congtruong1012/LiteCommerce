
@{
    WebUserData userData = User.GetUserData();
    ViewBag.Title = "Change Password";
}

    <div class="box box-primary">
        <div class="box-body">
            <form action="~/Account/ChangePwd" method="post">
                <div class="container-fluid">
                    <div class="row">
                        <span style="color: red">@Html.ValidationMessage("errorPass")</span> <br />
                        <span style="color: red">@Html.ValidationMessage("newPass")</span>
                        <input type="hidden" class="form-control"  value="@userData.UserID" name="email">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Old Password</label>
                            <input name="oldpass" type="password" required class="form-control" value="@ViewBag.oldPass"  placeholder="Enter old password">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">New Password</label>
                            <input name="newpass" type="password" required class="form-control" value="@ViewBag.newPass"  placeholder="Enter new password">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Confirm Password</label>
                            <input name="repeatpass" type="password" required class="form-control" value="@ViewBag.repeatPass"  placeholder="Confirm new password">
                        </div>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                        <a href="~/Dashboard" class="btn btn-danger">Cancel</a>
                    </div>
                    
                </div>
            </form>
        </div>
    </div>


